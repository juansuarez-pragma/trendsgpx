# Base de Datos
DATABASE_URL=postgresql://trendsgpx:password@localhost:5432/trendsgpx
TIMESCALEDB_ENABLED=true
POSTGRES_PASSWORD=trendsgpx_dev_password

# Redis
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/1

# API Keys - Plataformas de Redes Sociales
# YouTube Data API v3
YOUTUBE_API_KEY=your_youtube_api_key_here

# Reddit API (PRAW)
REDDIT_CLIENT_ID=your_reddit_client_id
REDDIT_CLIENT_SECRET=your_reddit_client_secret
REDDIT_USER_AGENT=TrendsGPX/1.0 by YourRedditUsername

# Mastodon API
MASTODON_ACCESS_TOKEN=your_mastodon_access_token
MASTODON_INSTANCE_URL=https://mastodon.social

# Aplicación
SECRET_KEY=your-secret-key-generate-with-openssl-rand-hex-32
DEBUG=true
ALLOWED_HOSTS=localhost,127.0.0.1
API_KEYS=dev_key_12345,another_api_key  # API keys separadas por comas para autenticación

# NLP Models
NLP_MODEL=dccuchile/bert-base-spanish-wwm-cased
BERTOPIC_EMBEDDING_MODEL=paraphrase-multilingual-MiniLM-L12-v2
SENTIMENT_MODEL=pysentimiento/robertuito-sentiment-analysis
SPACY_MODEL=es_core_news_md

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json  # json o text
LOG_FILE=/var/log/trendsgpx/app.log

# Performance
MAX_WORKERS=4
CELERY_POOL_GEVENT_SIZE=100
CELERY_POOL_PREFORK_SIZE=8

# Rate Limiting (por plataforma)
YOUTUBE_RATE_LIMIT_REQUESTS=10000
YOUTUBE_RATE_LIMIT_WINDOW=86400  # 24 horas en segundos
REDDIT_RATE_LIMIT_REQUESTS=60
REDDIT_RATE_LIMIT_WINDOW=60  # 1 minuto en segundos
MASTODON_RATE_LIMIT_REQUESTS=300
MASTODON_RATE_LIMIT_WINDOW=300  # 5 minutos en segundos

# Data Retention
DATA_RETENTION_DAYS=7  # FR-025: 1 semana

# Trending Detection
TRENDING_GROWTH_THRESHOLD=0.50  # FR-027: 50% crecimiento en 24h
TRENDING_DETECTION_INTERVAL_MINUTES=30

# Collection
COLLECTION_INTERVAL_HOURS=6
COLLECTION_BATCH_SIZE=50
NLP_BATCH_SIZE=100

# Cache
CACHE_TTL_SECONDS=3600  # 1 hora
CACHE_API_RESPONSES=true

# Monitoring
PROMETHEUS_PORT=9090
FLOWER_PORT=5555
FLOWER_BASIC_AUTH=admin:admin

# Environment
ENVIRONMENT=development  # development, staging, production
